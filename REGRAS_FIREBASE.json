{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "style-packs": {
      ".read": "auth != null",
      ".write": "false"
    },
    "rooms": {
      ".read": "auth != null",
      "$roomId": {
        ".write": "auth != null && (!data.exists() || data.child('host').val() === auth.uid || data.child('players').child(auth.uid).exists())"
      }
    }
  }
}
